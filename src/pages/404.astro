---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found - iodineZ">
  <section class="min-h-screen flex items-center justify-center pt-20">
    <div class="text-center">
      <h1 class="text-8xl font-bold gradient-text mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-white mb-4">Page Not Found</h2>
      <p class="text-slate-400 mb-8">The page you're looking for doesn't exist or has been moved.</p>
      <a href="/" class="btn-primary">Back to Home</a>
    </div>
  </section>
</BaseLayout>
