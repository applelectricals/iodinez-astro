---
import BaseLayout from '../../layouts/BaseLayout.astro';

const product = {
  name: 'Potassium Iodate',
  description: 'Potassium Iodate (KIO‚ÇÉ) is a stable iodine compound primarily used for salt iodization programs worldwide. It is preferred in tropical climates due to its greater stability compared to potassium iodide.',
  icon: 'üß™',
  casNumber: '7758-05-6',
  formula: 'KIO‚ÇÉ',
  grade: 'Food Grade / FCC',
  purity: '‚â•99.5%',
  appearance: 'White crystalline powder',
  solubility: 'Soluble in water',
  packaging: ['25 kg fiber drums', '50 kg fiber drums'],
  moq: '1 MT for trial, 6-10 MT standard',
  leadTime: '15-30 days',
  applications: [
    { title: 'Salt Iodization', desc: 'Primary use in iodized salt programs' },
    { title: 'Food Fortification', desc: 'Flour and bread fortification' },
    { title: 'Bread Making', desc: 'Dough conditioner and maturing agent' },
    { title: 'Chemical Reagent', desc: 'Laboratory and analytical use' },
  ],
  certifications: ['WHO-GMP', 'ISO 9001:2015', 'FSSAI', 'HALAL'],
