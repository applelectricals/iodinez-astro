const relatedProducts = [
  { name: 'Potassium Iodide', slug: 'potassium-iodide', icon: '‚öóÔ∏è' },
  { name: 'Calcium Iodate', slug: 'calcium-iodate', icon: 'üî¨' },
  { name: 'Sodium Iodide', slug: 'sodium-iodide', icon: 'üíé' },
