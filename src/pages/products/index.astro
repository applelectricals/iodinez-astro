                <div class="w-16 h-16 rounded-2xl bg-gray-50 flex items-center justify-center text-4xl group-hover:scale-110 transition-transform duration-300 shadow-inner">
                  {product.icon}
                </div>
                {product.featured && (
                  <span class="bg-amber-100 text-amber-800 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                    Featured
