  appearance: 'White crystalline powder or granules',
  solubility: 'Freely soluble in water',
  packaging: ['25 kg fiber drums', '50 kg fiber drums', 'Custom packaging available'],
  applications: [
    { title: 'Pharmaceuticals', desc: 'Thyroid medications and expectorants' },
    { title: 'Nutrition', desc: 'Dietary supplements and fortification' },
    { title: 'Radiation Protection', desc: 'Thyroid blocking agent' },
    { title: 'Photography', desc: 'Silver iodide production' },
