  title={`${product.name} - iodineZ | Pharmaceutical Grade Export from India`}
  description={`Buy ${product.name} from WHO-GMP certified manufacturers in India. ${product.grade} grade with ${product.purity} purity. Direct factory sourcing with quality assurance.`}
>
  <section class="pt-24 pb-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center gap-2 text-sm text-slate-400">
        <a href="/" class="hover:text-primary transition-colors">Home</a>
        <span>/</span>
        <a href="/products" class="hover:text-primary transition-colors">Products</a>
        <span>/</span>
        <span class="text-white">{product.name}</span>
      </nav>
    </div>
  </section>

  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="glass rounded-2xl p-8 lg:p-12 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-primary/20 to-accent/20 rounded-full blur-3xl"></div>
        
        <div class="relative grid lg:grid-cols-2 gap-10 items-center">
          <div>
            <div class="text-6xl mb-6">{product.icon}</div>
            <h1 class="text-4xl lg:text-5xl font-bold mb-4">{product.name}</h1>
            <p class="text-slate-400 text-lg mb-6">{product.description}</p>
            
            <div class="flex flex-wrap gap-3 mb-8">
