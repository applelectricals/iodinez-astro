---
import BaseLayout from '../layouts/BaseLayout.astro';

const products = [
  { name: 'Povidone Iodine', slug: 'povidone-iodine', description: 'USP grade antiseptic, 9-12% available iodine', icon: 'üíä' },
  { name: 'Potassium Iodide', slug: 'potassium-iodide', description: 'Pharmaceutical and nutrition grade KI', icon: '‚öóÔ∏è' },
  { name: 'Potassium Iodate', slug: 'potassium-iodate', description: 'Food fortification and industrial grade', icon: 'üß™' },
  { name: 'Sodium Iodide', slug: 'sodium-iodide', description: 'High purity pharmaceutical NaI', icon: 'üíé' },
  { name: 'Calcium Iodate', slug: 'calcium-iodate', description: 'Animal feed and nutrition grade', icon: 'üî¨' },
  { name: 'Iodoquinol', slug: 'iodoquinol', description: 'Active pharmaceutical ingredient', icon: '‚öïÔ∏è' },
  { name: 'Clioquinol', slug: 'clioquinol', description: 'Antifungal and antibacterial API', icon: 'üß¨' },
  { name: 'Iodine Prills', slug: 'iodine-prills', description: 'Pure elemental iodine for synthesis', icon: 'üí†' },
];

const processSteps = [
  { step: '01', title: 'Inquiry & Documentation', description: 'Initial consultation, product specifications, and requirements gathering' },
  { step: '02', title: 'Quality Testing', description: 'Comprehensive analysis and testing as per international standards' },
  { step: '03', title: 'Packaging & Compliance', description: 'Safe packaging per shipping regulations and compliance checks' },
  { step: '04', title: 'Shipping & Delivery', description: 'Fast, secure international shipping with real-time tracking' },
];

const certifications = [
  { title: 'WHO-GMP', description: 'World Health Organization Good Manufacturing Practice certified', icon: '‚úì' },
  { title: 'ISO 9001', description: 'Quality management systems certification', icon: '‚úì' },
  { title: 'ISO 14001', description: 'Environmental management certification', icon: '‚úì' },
