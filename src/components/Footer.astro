---
const products = [
  { name: 'Iodoquinol', href: '/products/iodoquinol' },
  { name: 'Clioquinol', href: '/products/clioquinol' },
  { name: 'Iodine Prills', href: '/products/iodine-prills' },
  { name: 'Potassium Iodide', href: '/products/potassium-iodide' },
  { name: 'Potassium Iodate', href: '/products/potassium-iodate' },
  { name: 'Sodium Iodide', href: '/products/sodium-iodide' },
  { name: 'Calcium Iodate', href: '/products/calcium-iodate' },
  { name: 'Povidone Iodine', href: '/products/povidone-iodine' },
];

const links = [
  { name: 'About Us', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'Products', href: '/products' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' },
];
---

<footer class="bg-white border-t border-gray-200 mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10">
      
      <!-- Company Info -->
      <div>
        <a href="/" class="text-2xl font-light tracking-tight mb-4 block">
          <span class="text-gray-400">iodine</span><span class="text-primary font-bold">Z</span>
        </a>
        <p class="text-gray-600 text-sm">
          Export Marketing Services for Pharma and Chemical Industry
        </p>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-gray-900 mb-4">CONTACT</h4>
        <div class="text-gray-600 text-sm space-y-2">
<p>5A Central Road, Kolkata 700032, West Bengal, India</p>
          <p><a href="mailto:info@iodinez.com" class="hover:text-primary">info@iodinez.com</a></p>
          <p><a href="tel:+918335861010" class="hover:text-primary">+91 8335 86 1010</a></p>
        </div>
      </div>
      
      <!-- Products -->
      <div>
        <h4 class="font-semibold text-gray-900 mb-4">PRODUCTS</h4>
        <ul class="space-y-2">
          {products.map((product) => (
            <li>
              <a href={product.href} class="text-gray-600 hover:text-primary text-sm">
                {product.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Links -->
      <div>
        <h4 class="font-semibold text-gray-900 mb-4">LINKS</h4>
        <ul class="space-y-2">
          {links.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-10 pt-6 border-t border-gray-200 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-gray-500 text-sm">
        Powered by <a href="/" class="text-primary">iodineZ</a>
      </p>
      <div class="flex gap-4 text-sm">
        <a href="/privacy" class="text-gray-500 hover:text-primary">Privacy Policy</a>
        <span class="text-gray-300">|</span>
        <a href="/terms" class="text-gray-500 hover:text-primary">Our Terms</a>
      </div>
    </div>
  </div>
</footer>
