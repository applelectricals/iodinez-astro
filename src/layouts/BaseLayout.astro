---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Import pharmaceutical chemicals from India with complete quality assurance. Source Povidone Iodine, Potassium Iodide, and other iodine derivatives from WHO-GMP certified manufacturers." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Povidone Iodine, Potassium Iodide, Iodine derivatives, pharma chemicals, India export, pharmaceutical raw materials" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://iodinez.com" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="antialiased bg-white text-gray-900">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
